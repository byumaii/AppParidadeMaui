<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Trabalho_Palmuti.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Trabalho_Palmuti"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="{StaticResource RoxoPrincipal}"
    Shell.TitleColor="{StaticResource TextoBranco}"
    Shell.ForegroundColor="{StaticResource TextoBranco}">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior
            StatusBarColor="{StaticResource RoxoPrincipal}"
            StatusBarStyle="LightContent" />
    </Shell.Behaviors>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
