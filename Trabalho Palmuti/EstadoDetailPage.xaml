<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trabalho_Palmuti.EstadoDetailPage"
             Shell.BackgroundColor="{StaticResource RoxoPrincipal}"
             Title="{Binding Capital.Nome}">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Dados do Estado (via API):" FontSize="14" TextColor="Gray" />
        <Label Text="{Binding Estado.Nome}" FontSize="22" FontAttributes="Bold" />

        <Label Text="RegiÃ£o:" FontSize="14" TextColor="Gray" Margin="0,10,0,0" />
        <Label Text="{Binding Estado.Regiao.Nome}" FontSize="18" />

        <Label Text="Sigla:" FontSize="14" TextColor="Gray" Margin="0,10,0,0" />
        <Label Text="{Binding Estado.Sigla}" FontSize="18" />

        <Label Text="ID (IBGE):" FontSize="14" TextColor="Gray" Margin="0,10,0,0" />
        <Label Text="{Binding Estado.Id}" FontSize="18" />

        <BoxView HeightRequest="1" Color="Gray" Margin="0,20,0,0" />

        <Label Text="{Binding DistanciaFormatada}"
               FontSize="14"
               TextColor="Gray"
               HorizontalTextAlignment="Center"
               Margin="0,10,0,0"/>

    </VerticalStackLayout>

</ContentPage>